rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // ============================================
    // 판매 요청 이미지 (Sell Requests)
    // ============================================
    match /sell_requests/{userId}/{allPaths=**} {
      allow read: if true; // 모든 사용자 읽기 가능
      allow write: if request.auth != null && request.auth.uid == userId; // 본인만 업로드 가능
    }

    // ============================================
    // 매물 이미지 (Listings)
    // ============================================
    match /listings/{listingId}/{allPaths=**} {
      allow read: if true; // 모든 사용자 읽기 가능
      allow write: if request.auth != null; // 인증된 사용자만 업로드 가능
    }

    // ============================================
    // 프로필 이미지 (Profiles)
    // ============================================
    match /profiles/{userId}/{allPaths=**} {
      allow read: if true; // 모든 사용자 읽기 가능
      allow write: if request.auth != null && request.auth.uid == userId; // 본인만 업로드 가능
    }

    // ============================================
    // 완제품 이미지 (Finished PCs)
    // ============================================
    match /finished_pcs/{userId}/{allPaths=**} {
      allow read: if true; // 모든 사용자 읽기 가능
      allow write: if request.auth != null && request.auth.uid == userId; // 본인만 업로드 가능
    }

    // ============================================
    // 부품 이미지 (Parts - Admin/System)
    // ============================================
    match /parts/{partId}/{allPaths=**} {
      allow read: if true; // 모든 사용자 읽기 가능
      allow write: if request.auth != null; // 인증된 사용자만 업로드 가능
    }

    // 기타 경로는 차단
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
